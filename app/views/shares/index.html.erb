<h1>Listing shares</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Recipient email</th>
      <th>Message</th>
      <th>Url string</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shares.each do |share| %>
      <tr>
        <td><%= share.email %></td>
        <td><%= share.recipient_email %></td>
        <td><%= share.message %></td>
        <td><%= share.url_string %></td>
        <td><%= link_to 'Show', share %></td>
        <td><%= link_to 'Edit', edit_share_path(share) %></td>
        <td><%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

